{
  "compilerOptions": {       
    "lib": [
      "dom",
      "dom.Iterable",
      "esnext"
    ],                                   
    "allowJs": true,                                
    "jsx": "react-jsx",                                                      
    "noEmit": true,                                       
    "strict": true,                                                                               
    "resolveJsonModule": true,
    "moduleResolution": "node",                  
    "isolatedModules": true,               
    "allowSyntheticDefaultImports": true,        
    "esModuleInterop": true,                                                    
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true        
  },
  "include": ["src"]
}
